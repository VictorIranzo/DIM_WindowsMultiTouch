<Page
    x:Class="ListEvents.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListEvents"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="image" Grid.Column="0" Grid.Row="0" PointerCanceled="Image_PointerCanceled" PointerCaptureLost="Image_PointerCaptureLost" PointerEntered="Image_PointerEntered" PointerExited="Image_PointerExited" PointerMoved="Image_PointerMoved" PointerPressed="Image_PointerPressed" PointerReleased="Image_PointerReleased" PointerWheelChanged="Image_PointerWheelChanged" Source="/Assets/SplashScreen.png"/>
        <ListView x:Name="listView" Grid.Column="0" Grid.Row="1" />

    </Grid>
</Page>
